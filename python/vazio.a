def alterar_foto_usuario(usuario_id, nova_imagem):
    usuario = Usuario.query.get(usuario_id)
    if usuario:
        foto = Foto.query.filter_by(id_usuario=usuario_id).first()
        if foto:
            foto.imagem = nova_imagem
            db.session.commit()
            return True
    return False

def alterar_senha_usuario(usuario_id, nova_senha):
    usuario = Usuario.query.get(usuario_id)
    if usuario:
        usuario.senha = nova_senha
        db.session.commit()
        return True
    return False 

